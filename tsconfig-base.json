{
    "compilerOptions": {
        "declaration": true, // Governs the creation of d.ts files, 
        /*"module": "commonjs",*/ // setting module causes exports not defined error in Chrome
        "strict": true,
        "noUnusedLocals": false, // Declaring a local and not using it will cause a compilation error
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "composite": true,
        "inlineSourceMap": true,
        "noImplicitAny": false,
        "outDir": "./build",
        "tsBuildInfoFile": "./cache/.tsbuildinfo",
        "watch": true        
    }
}
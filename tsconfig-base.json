{
    "compilerOptions": {
        "declaration": true, // Governs the creation of d.ts files, 
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "noUnusedLocals": false, // Declaring a local and not using it will cause a compilation error
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "composite": true,
        "inlineSourceMap": true,
        "noImplicitAny": false,
        "outDir": "./build",
        "declarationDir": "./build/declarations", // Tells TSC where to put declaration files (by default, the same folder as generated .js files),
        "tsBuildInfoFile": "./cache/.tsbuildinfo",
        "watch": true,
        "lib": [
            "es6"
        ]
    }
}
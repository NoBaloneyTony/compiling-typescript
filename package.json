{
  "name": "compiling-type-script2",
  "version": "0.0.0",
  "description": "CompilingTypeScript2",
  "main": "server.js",
  "author": {
    "name": "Daniel 'Code Whisperer' Stern"
  },
  "scripts": {
    "build-full": "tsc --build",
    "build-server": "tsc -p src/server",
    "build-client": "tsc -p src/client",
    "build": "tsc -p tsconfig.json",
    "watch": "echo 'problem with ::tsc -w, output to wrong directory'",
    "watch-wip": "tsc --watch",
    "serve": "node build/server/server.js",
    "start": "npm run build-full && npm run serve"
  },
  "devDependencies": {
    "@types/express": "^4.17.1",
    "@types/node": "^8.10.58",
    "express": "^4.17.1",
    "typescript": "^3.2.2"
  }
}
